<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myblack</item>
        <item name="colorPrimaryDark">@color/myblack</item>
        <item name="colorAccent">@color/myyellow</item>
        <item name="android:windowBackground">@color/window</item>
    </style>

    <style name="CreateEventTheme" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myblack</item>
        <item name="colorPrimaryDark">@color/myblack</item>
        <item name="colorAccent">@color/myblack</item>
        <item name="android:windowBackground">@color/window</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myblack</item>
        <item name="colorPrimaryDark">@color/myblack</item>
        <item name="colorAccent">#00DD00</item>
        <item name="android:windowBackground">@color/window</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
